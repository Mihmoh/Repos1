//Вариант 13. В заданном целочисленном массиве R(9) определить индекс наибольшего из нечётных по значению положительных элементов.

#include <iostream>
#include <stdio.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Russian");
    int m=-1;
    int i;
    int z=0;
    int R[9];
    printf("Введите массив \n");
    for(i=0;i<9;i++)
    	{
    		scanf("%d", &R[i]);    		
    	}
    	
    for(i=0;i<9;i++)
    {
    	if(R[i]>0 && R[i]%2==1 && R[i]>z)
    	{    		
    		z=R[i];
    		m=i;
    		printf("\nСам элемент:%d",z);
    		printf("\nИндекс текущего наибольшего, нечётного, положительного элемента: %d",m);    		
    	}
    	else
    	{
    		printf("\nНеудовлетворяющий элемент"); 
    	}
    }
    if(m>-1)
    {
        printf("\nКонечный результат: %d", m);
    }
    else
    {
        printf("\nНет удовлетворяющих элементов");
    }    
}
